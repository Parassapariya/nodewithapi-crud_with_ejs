<%- include('a_header') %>

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="mb-3">Product Category</h1>
                        <div class="col-4">

                        </div>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <div class="container">
                            <button class="btn" style="background-color: #41A6DF;  float: right; color:white"
                                data-toggle="modal" data-target="#myModal">+ ADD NEW</button>
                            <div class="modal fade" id="myModal" role="dialog">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">ADD NEW CATEGORY</h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <form action="/cat_add" method="post" enctype="multipart/form-data">
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Category Name:</label>
                                                    <input type="text" class="form-control" id="txt_catnm"
                                                        name="txt_catnm" placeholder="Enter Category Name" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="imgCat">Category Slug :</label>
                                                    <input type="text" class="form-control" id="txt_catslg"
                                                        name="txt_catslg" placeholder="Enter Category Slug" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="imgCat">Category Image :</label>
                                                    <input type="file" class="form-control" id="catimg" name="catimg"
                                                        required>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" name="Catsub"
                                                    class="btn btn-primary">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->


        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body table-responsive p-2">

                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Categories</th>
                                        <th>Categories Slug</th>
                                        <th>Image</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% user.forEach((row,index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td>
                                                <%= row.cat_name %>
                                            </td>
                                            <td>
                                                <%= row.cat_slug %>
                                            </td>
                                            <td><img src='<%= row.cat_img %>' height="50px" width="50px" alt=""
                                                    srcset=""></td>
                                            <td><a href="/cat_del/<%= row._id %>"><button class="btn btn-warning del"><i
                                                            class="fa fa-trash" style="color:black"></i></button></a>
                                                <button type="button" class="btn editbtn btn-success openEditMdl"
                                                    data-toggle="modal" data-img="" data-iid="<%= row._id %>"
                                                    data-target="#editmodel"><i class="fa fa-edit"></i></button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>



    <div class="modal fade" id="editmodel" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">EDIT CATEGORY</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form action="/cat_edit" method="post" enctype="multipart/form-data">

                    <div class="modal-body">
                        <input type="hidden" name="id" id="id">
                        <input type="hidden" name="oldimg" id="oldimg1">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Category Name:</label>
                            <input type="text" class="form-control" id="txt_catnm1" name="txt_catnm"
                                placeholder="Enter Category Name" required>
                        </div>
                        <div class="form-group">
                            <label for="imgCat">Category Slug :</label>
                            <input type="text" class="form-control" id="txt_catslg1" name="txt_catslg"
                                placeholder="Enter Category Slug" required>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-8">
                                    <label for="imgCat">Category Image :</label>
                                    <input type="file" class="form-control" id="catimg" name="catimg">
                                </div>
                                <div class="col-sm-4">
                                    <label for="imgCat">Old Image :</label><br>
                                    <img src="" alt="" height="100px" width="100px" id="oldimg">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" name="Coupanbtn" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('a_footer') %>

        <script>
            
            $('.editbtn').click(function (e) {
                e.preventDefault();
                let id = $(this).data('iid');
                $.ajax({
                    type: "GET",
                    url: "/Cat_Edit_Get/" + id,
                    success: function (response) {
                        console.log(response);
                        $('#txt_catnm1').val(response.data.cat_name);
                        $('#txt_catslg1').val(response.data.cat_slug);
                        $('#oldimg').attr('src',response.data.cat_img);
                        $('#oldimg1').val(response.data.cat_img);
                        $('#id').val(response.data._id);
                    }
                });
                //alert(id)
            });
        </script>

<% if(message) { %>
<script>
    toastr.success('<%= message.message %>');
</script>
<% } %>